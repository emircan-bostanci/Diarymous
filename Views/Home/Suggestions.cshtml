@model Diarymous.Models.Entities.Suggestion;
@{
  Layout = "../_Layout.cshtml"; 
}
<main>
  <div class="container">
    <div class="">
      <div class="row justify-content-center mt-3 mb-3"> 
        <span> Görüş ve önerileriniz benim için değerlidir. Lütfen görüş veya öneride bulununun. Teşekkürler.</span>
      </div>
    </div>
    <div class="d-flex justify-content-center">
        @using (Html.BeginForm(FormMethod.Post,new {@class="w-75 m-3"}))
        {
          @Html.AntiForgeryToken()
          <div class="">
            @Html.TextAreaFor(x => x.suggestionText,new {@class="form-control w-100 m-3", @style="height:420px"})
          </div>
          <div class="ml-5">
            <button type='submit' class="submit btn ">Gönder</button>
          </div>
        }
    </div>
    <div class="row justify-content-center">
      Email : suggestion@diarymous.com
    </div>
  </div>
</main>
